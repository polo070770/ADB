<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.model.Subfamilia" table="subfamilia">
  
        <id name="id_subfamilia" column="ID_SUBFAMILIA">
            <generator class="identity"/>
        </id>
  
        <property name="nom" column="NOM"/>
    
        <many-to-one name="familia" class="com.model.Familia" fetch="select">
            <column name="ID_FAM"/>
        </many-to-one>
    
        <set name="articles" table="ARTICLE" lazy="true" cascade="all">
            <key>
                <column name="ID_SUBFAM"/>
            </key>
      
            <one-to-many class="com.model.Article"/>
        </set>
    
    </class>
    
</hibernate-mapping>
